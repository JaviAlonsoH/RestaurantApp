<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/restaurantListFragment">

    <fragment
        android:id="@+id/restaurantListFragment"
        android:name="com.example.restaurantapp.ui.RestaurantListFragment"
        android:label="fragment_restaurant_list"
        tools:layout="@layout/fragment_restaurant_list" >
        <action
            android:id="@+id/listToDetail"
            app:destination="@id/restaurantDetailFragment" />
        <action
            android:id="@+id/listToAdd"
            app:destination="@id/addRestaurantFragment" />
    </fragment>
    <fragment
        android:id="@+id/restaurantDetailFragment"
        android:name="com.example.restaurantapp.ui.RestaurantDetailFragment"
        android:label="fragment_restaurant_detail"
        tools:layout="@layout/fragment_restaurant_detail" >
        <argument
            android:name="name"
            app:argType="string" />
        <argument
            android:name="foodType"
            app:argType="string" />
        <argument
            android:name="idRest"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/addRestaurantFragment"
        android:name="com.example.restaurantapp.ui.addRestaurant.AddRestaurantFragment"
        android:label="fragment_add_restaurant"
        tools:layout="@layout/fragment_add_restaurant" >
        <action
            android:id="@+id/addToList"
            app:destination="@id/restaurantListFragment" />
    </fragment>
</navigation>